body {
  font-family: 'Sawarabi Gothic', sans-serif;
  font-size: 18px;
  background-image: url(<%= image_url('background.jpg') %>);
  background-size: 200px;
}

nav {
  padding: 1px;
  margin: 0;
  background-color: #F29301;
  text-align: center;
  font-weight: 500;
  font-size: 1.25em;
  border-bottom: 3px solid #772128;
}

nav ul {
  margin: auto;
  width: 100%;
  padding: 7px;
  background-color: #F29301;
}

nav li {
  display: inline;
  padding: 6px 55px 6px 55px;
}

nav li:hover {
  background-color: #772128;
}

nav a {
  text-decoration: none;
  color: #fff;
}

nav a:hover {
  text-decoration: none;
  color: #fff;
}

nav li:active {
  text-decoration: none;
  background-color: #772128;
}

header h1 {
  font-family: 'Josefin Sans', sans-serif;
  color: #fff;
  background-color: #772128;
  text-align: center;
  padding: 25px;
  font-size: 2.5em;
  border-top: 3px groove #D5D600;
  box-shadow: inset 0 0 10px #000000;
  border-bottom: 3px groove #D5D600;
}

main.container {
  margin: auto;
  margin-bottom: 40px;
  width: 50%;
  background-color: #ECE9C0;
  padding: 15px;
  box-shadow: 5px 5px;
  border: 3px solid black;
}

.failure {
  background-color: tomato;
  text-align: center;
  padding: 15px;
  font-weight: 600;
  font-size: 1.25em;
  margin-bottom: 10px;
  color: black;
}

.success {
  background-color: yellowgreen;
  text-align: center;
  padding: 15px;
  font-weight: 600;
  font-size: 1.25em;
  margin-bottom: 10px;
  color: black;
}

form, input, select {
  display: block;
  margin-top: 10px;
  margin-bottom: 20px;
  padding: 2px;
}

thead {
  text-align: left;
  font-size: 1.2em
}

input[type=submit] {
    background-color: #772128;
    border: none;
    color: white;
    padding: 10px 25px;
    text-decoration: none;
    margin: 8px 2px;
}

label {
  margin-bottom: 10px;
  margin-top: 10px;
  display: block;
  font-weight: 600;
  text-decoration: underline;
}

a {
  text-decoration: none;
  color: #9b2933;
}

a:hover {
  text-decoration: underline;
  color: #ba2e3a;
}

.text-center {
  text-align: center;
}

.dashboard-table {
  width: 100%;
  padding: 10px;
}

.content-table {
  width: 30%;
  margin: auto;
}

.data-table {
  width: 100%;
  margin: auto;
  padding: 5px;
  border-collapse: collapse;
}

.data-cell {
  padding: 10px 0;
  border-width: 2px 0;
  border-color: #000;
  border-style: dashed;
}

.edit-delete {
  width: 10%;
}

.data-time {
  width: 25%;
}

.text-right {
  text-align: right;
}

.table-fit {
  width: 30%;
}

.container {
  margin: auto;
  width: 60%;
  background-color: #edd9a3;
  border-radius: 2%;
}

.grid-container {
  display: grid;
  margin: auto;
  width: 95%;
  grid-template-columns: auto auto;
}

.grid-item {
  margin: 20px;
  background-color: #D5D600;
  width: inherit;
  border-radius: 10%;
}

.grid-item ul {
  display: block;
}

.grid-item li {
  display: inline;
  font-family: 'Abel', sans-serif;
  padding-right: 30px;
}

.rating-img {
  width: 16px;
}
