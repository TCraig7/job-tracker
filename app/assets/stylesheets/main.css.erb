body {
  font-family: 'Sawarabi Gothic', sans-serif;
  font-size: 16px;
  background-image: url(<%= image_url('background.jpg') %>);
  background-size: 200px;
}

nav {
  padding: 1px;
  margin: 0;
  background-color: #F29301;
  text-align: center;
  font-weight: 500;
  font-size: 1.25em;
  border-bottom: 3px solid #772128;
}

nav ul {
  margin: auto;
  width: 100%;
  padding: 7px;
  background-color: #F29301;
}

nav li {
  display: inline;
  padding: 5px 55px 5px 55px;
}

nav li:hover {
  background-color: #772128;
}

nav a {
  text-decoration: none;
  color: #fff;
}

nav a:hover {
  text-decoration: none;
  color: #fff;
}

header h1 {
  font-family: 'Josefin Sans', sans-serif;
  color: #fff;
  background-color: #772128;
  text-align: center;
  padding: 25px;
  font-size: 2.5em;
  border-top: 3px groove #D5D600;
  box-shadow: inset 0 0 10px #000000;
  border-bottom: 3px groove #D5D600;
}

main.container {
  margin: auto;
  width: 50%;
  background-color: #ECE9C0;
  padding: 15px;
}

.container {
  margin: auto;
  width: 50%;
  background-color: #edd9a3;
}

.grid-container {
  display: grid;
  margin: auto;
  width: 95%;
  grid-template-columns: auto auto;
}

.grid-item {
  margin: 20px;
  background-color: #D5D600;
  width: inherit;
}

.grid-item ul {
  display: block;
}

.grid-item li {
  display: inline;
  font-family: 'Abel', sans-serif;
  padding-right: 30px;
}
