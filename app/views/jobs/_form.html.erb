<h4 class="text-center">
  <%= link_to 'Add New Category', new_category_path %>
</h4>

<%= form_for @job do |f| %>
  <%= f.label :category_id %>
  <%= f.select :category_id do %>
    <% @categories.each do |category| %>
      <%= content_tag(:option, category.name, value: category.id) %>
    <% end %>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :company_id %>
  <%= f.select :company_id do %>
    <% @companies.each do |company| %>
      <%= content_tag(:option, company.name, value: company.id) %>
    <% end %>
  <% end %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.select :level_of_interest do %>
    <% 5.times do |rating| %>
      <%= content_tag(:option, "#{rating + 1} stars", value: rating + 1) %>
    <% end %>
  <% end %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.submit %>
<% end %>
