<h4 class="text-center">
  <%= link_to 'Add New Job', new_job_path %> |
  <%= link_to 'Edit Job', edit_job_path(@job) %> |
  <%= link_to 'Delete Job', job_path(@job), method: :delete, data: {confirm: 'Really delete job?'} %>
</h4>

<h2><%= @job.title %> at <%= @job.company.name %></h2>
<h5><%= link_to "See Other #{@job.category.name} Jobs", category_path(@job.category) %>
<p><strong>Description:</strong> <%= @job.description %></p>
<p><strong>Level of Interest:</strong> <%= interest_to_star(@job.level_of_interest).html_safe %></p>
<p><strong>City:</strong> <%= @job.city %></p>
<p><strong>Company:</strong> <%= link_to @job.company.name, company_path(@job.company) %></p>
<%= render partial: 'comments/form' %>

<h3>Notes:</h3>
<table class="data-table">
  <thead>
    <th>Created</th>
    <th>Comment</th>
  </thead>
  <tbody>
    <%= render partial: 'jobs/comment', collection: @job.comments.reverse %>
  </tbody>
  </table>
