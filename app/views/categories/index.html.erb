<%= link_to 'Create New Category', new_category_path %><br />
<ul>
  <% @categories.each do |category| %>
    <li><%= link_to category.name, category_path(category) %> - <%= link_to "Edit", edit_category_path(category) %> - <%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: "Really delete category #{category.name}?"}, id: "category-id-#{category.id}" %></li>
  <% end %>
</ul>
