<%= link_to "All Jobs for #{@company.name}", company_jobs_path(@company) %>

<%= form_for [@company, @contact] do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :position %>
<%= f.text_field :position %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.submit "Save" %>
<% end %>

<%= render partial: 'companies/contact', collection: @company.contacts.reverse %>
